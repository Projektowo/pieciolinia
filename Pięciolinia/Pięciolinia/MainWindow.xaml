<Window x:Class="Pięciolinia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pięciolinia"
        mc:Ignorable="d"
        Title="Pięciolinia" Height="600" Width="920"
		Icon="Icons/Ikona1.ico"
        WindowStyle="SingleBorderWindow"
        Background="Transparent"
		>
	

	<Border Background="#272537"
            Padding="10">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>

				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>

				<ColumnDefinition Width="4*"/>
				<ColumnDefinition Width="4*"/>
			</Grid.ColumnDefinitions>

			<Grid.RowDefinitions>
				<RowDefinition Height="75"/>
				<RowDefinition/>
				<RowDefinition Height="50"/>
				<RowDefinition Height="50"/>
			</Grid.RowDefinitions>



			<TextBlock Text="Pięciolinia"
                       Grid.ColumnSpan="4"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="26"
                       Margin="25,0,0,0"/>

			<TextBox Grid.Row="0"
                     Grid.ColumnSpan="4"
                     Grid.Column="4"
                     Margin="15"
                     FontSize="23"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     Style="{StaticResource ShadowTextBox}"/>

			<Button Grid.Row="0"
                    Grid.Column="8"
                    Content="PLAY"
                    Style="{StaticResource ButtonTheme}"/>

			<Button Grid.Row="0"
                    Grid.Column="9"
                    Content="STOP"
                    Style="{StaticResource ButtonTheme}"/>



			<Rectangle
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.RowSpan="2"
                    Fill="red"
                    Height="50"
                    Margin="5"/>

			<Rectangle
                    Grid.Row="2"
                    Grid.Column="1"
                    Grid.RowSpan="2"
                    Fill="Blue"
                    Height="50"
                    Margin="5"/>

			<Rectangle
                    Grid.Row="2"
                    Grid.Column="2"
                    Grid.RowSpan="2"
                    Fill="Green"
                    Height="50"
                    Margin="5"/>

			<Rectangle
                    Grid.Row="2"
                    Grid.Column="3"
                    Grid.RowSpan="2"
                    Fill="Yellow"
                    Height="50"
                    Margin="5"/>



			<Rectangle
                    Grid.Row="2"
                    Grid.Column="4"
                    Grid.RowSpan="2"
                    Fill="red"
                    Height="50"
                    Margin="5"/>

			<Rectangle
                    Grid.Row="2"
                    Grid.Column="5"
                    Grid.RowSpan="2"
                    Fill="Blue"
                    Height="50"
                    Margin="5"/>

			<Rectangle
                    Grid.Row="2"
                    Grid.Column="6"
                    Grid.RowSpan="2"
                    Fill="Green"
                    Height="50"
                    Margin="5"/>

			<Rectangle
                    Grid.Row="2"
                    Grid.Column="7"
                    Grid.RowSpan="2"
                    Fill="Yellow"
                    Height="50"
                    Margin="5"/>

			<Button Grid.Row="2"
                    Grid.Column="8"
                    Content="Zapisz"
                    Style="{StaticResource ButtonTheme}"/>


			<Button Grid.Row="2"
                    Grid.Column="9"
                    Content="Eksportuj"
                    Style="{StaticResource ButtonTheme}"/>

			<Button Grid.Row="3"
                    Grid.Column="8"
                    Content="Wczytaj"
                    Style="{StaticResource ButtonTheme}"/>

			<Button Grid.Row="3"
                    Grid.Column="9"
                    Content="Wyczyść"
                    Style="{StaticResource ButtonTheme}"/>


		</Grid>
	</Border>


</Window>
