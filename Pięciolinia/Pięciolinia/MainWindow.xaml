<Window x:Class="Pięciolinia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pięciolinia"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="920"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Border Background="#272537"
            Padding="10">
        <Grid AllowDrop="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>

                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>


            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>



            <TextBlock Text="Pięciolinia"
                       Grid.ColumnSpan="4"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="26"
                       Margin="25,0,0,0"/>

            <TextBox Grid.Row="0"
                     Grid.ColumnSpan="2"
                     Grid.Column="2"
                     Margin="15"
                     FontSize="23"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     Style="{StaticResource ShadowTextBox}"/>

            <Button Grid.Row="0" 
                    Grid.Column="4"
                    Grid.ColumnSpan="2"
                    Content="PLAY"
                    Style="{StaticResource ButtonTheme}"/>

            <Button Grid.Row="0" 
                    Grid.Column="6"
                    Grid.ColumnSpan="2"
                    Content="STOP"
                    Style="{StaticResource ButtonTheme}"/>


            <Canvas Grid.Row="1"
                    Grid.ColumnSpan="8"
                    x:Name="Canvas" 
                    AllowDrop="True" 
                    DragOver="CanvasDragOver"
                    Drop="CanvasDrop"
                    Background="#34324a">


                <Rectangle
                    x:Name="Red"
                    Fill="red"
                    Height="50"
                    Width="50"
                    Canvas.Left="31"
                    Canvas.Top="395"
                    MouseMove="RectangleMouseMove"/>


                <Rectangle
    x:Name="Red2"
    Fill="blue"
    Height="50"
    Width="50"
    Canvas.Left="142"
    Canvas.Top="395"
    MouseMove="RectangleMouseMove"/>
                <Rectangle
    x:Name="Red3"
    Fill="yellow"
    Height="50"
    Width="50"
    Canvas.Left="256"
    Canvas.Top="395"
    MouseMove="RectangleMouseMove"/>
                <Rectangle
    x:Name="Red4"
    Fill="green"
    Height="50"
    Width="50"
    Canvas.Left="374"
    Canvas.Top="395"
    MouseMove="RectangleMouseMove"/>
                <Rectangle
    x:Name="Red5"
    Fill="red"
    Height="50"
    Width="50"
    Canvas.Left="483"
    Canvas.Top="395"
    MouseMove="RectangleMouseMove"/>
                <Rectangle
    x:Name="Red6"
    Fill="blue"
    Height="50"
    Width="50"
    Canvas.Left="590"
    Canvas.Top="395"
    MouseMove="RectangleMouseMove"/>
                <Rectangle
    x:Name="Red7"
    Fill="yellow"
    Height="50"
    Width="50"
    Canvas.Left="708"
    Canvas.Top="395"
    MouseMove="RectangleMouseMove"/>
                <Rectangle
    x:Name="Red8"
    Fill="green"
    Height="50"
    Width="50"
    Canvas.Left="816"
    Canvas.Top="395"
    MouseMove="RectangleMouseMove"/>
            </Canvas>


            <Button Grid.Row="3" 
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Content="Zapisz"
                    Style="{StaticResource ButtonTheme}"/>


            <Button Grid.Row="3" 
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    Content="Eksportuj"
                    Style="{StaticResource ButtonTheme}"/>

            <Button Grid.Row="3" 
                    Grid.Column="4"
                    Grid.ColumnSpan="2"
                    Content="Wczytaj"
                    Style="{StaticResource ButtonTheme}"/>

            <Button Grid.Row="3" 
                    Grid.Column="6"
                    Grid.ColumnSpan="2"
                    Content="Wyczyść"
                    Style="{StaticResource ButtonTheme}"/>


        </Grid>
    </Border>


</Window>
