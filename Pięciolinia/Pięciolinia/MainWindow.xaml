<Window x:Class="Pięciolinia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pięciolinia"
        mc:Ignorable="d"
        Title="Pięciolinia" Height="600" Width="920"
		Icon="Icons/Ikona1.ico"
        WindowStyle="SingleBorderWindow"
        Background="Transparent"
        KeyDown="MainWindow_KeyDown">


    <Border Background="#272537"
            Padding="10">

        <!--Pierwszy grid dla przycisków/menu-->
        <Grid AllowDrop="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>

                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>


            <!-- scroll viewer umożliwiający scrollowanie nut w poziomie (i pionie jak się ustawi) -->
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled"
                          Grid.Row="1"
                          Grid.ColumnSpan="8"
                          Style="{StaticResource DarkHorizontalScrollBarViewerStyle}">
                <!--grid w którym znajdują się nuty, takty-->
                <Grid Grid.Row="1"
                      Grid.ColumnSpan="8"
                      x:Name="mainGrid">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>

                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>

                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>


                    <!--pierwsze nutki-->
                    <Image x:Name="elementImage1" 
                           Source="/Images/calanuta.png" 
                           Width="50" Height="50"
                           Grid.Column="0"
                           Grid.Row="6"/>

                    <Image x:Name="elementImage2" 
                           Source="/Images/calanuta.png" 
                           Width="50" Height="50"
                           Grid.Column="2"
                           Grid.Row="6"/>
                </Grid>
            </ScrollViewer>

            <!--przycisk dodajacy takt-->
            <Button Name="button1" Content="Dodaj takt" Click="AddColumnButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>

            <TextBlock Text="Pięciolinia"
                       Grid.ColumnSpan="4"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="26"
                       Margin="25,0,0,0"/>


            <TextBox Grid.Row="0"
                     Grid.ColumnSpan="2"
                     Grid.Column="2"
                     Margin="15"
                     FontSize="23"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     Name="Takt"
                     MaxLength="5"
                     Style="{StaticResource ShadowTextBox}" PreviewTextInput="TactValidation"/>


            <Button Grid.Row="0" 
                    Grid.Column="4"
                    Grid.ColumnSpan="2"
                    Content="PLAY"
                    Style="{StaticResource ButtonTheme}"/>

            <Button Grid.Row="0" 
                    Grid.Column="6"
                    Grid.ColumnSpan="2"
                    Content="STOP"
                    Style="{StaticResource ButtonTheme}"/>


            <Button Grid.Row="3" 
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Content="Zapisz"
                    Style="{StaticResource ButtonTheme}"/>


            <Button Grid.Row="3" 
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    Content="Eksportuj"
                    Style="{StaticResource ButtonTheme}"/>

            <Button Grid.Row="3" 
                    Grid.Column="4"
                    Grid.ColumnSpan="2"
                    Content="Wczytaj"
                    Style="{StaticResource ButtonTheme}"/>

            <Button Grid.Row="3" 
                    Grid.Column="6"
                    Grid.ColumnSpan="2"
                    Content="Wyczyść"
                    Style="{StaticResource ButtonTheme}"/>


        </Grid>
    </Border>


</Window>
